{% extends 'HerzultForumBundle::layout.html.twig' %}
{% block content %}
<div class="forum category_show">
    <ul class="crumbs">
        <li><a href="{{ path('herzult_forum_index') }}">{{'forum.title' | trans({} , 'HerzultForumBundle')}}</a></li>
        {{ forum_generateCategoryBreadcrumbs(category, true) }}
    </ul>
    <div class="main topics">
        <h2>{{ category.name }}</h2>
        <a href="{{ forum_urlForCategoryAtomFeed(category) }}" title="Atom feed" class="feed atom">Atom feed</a>
        {% render 'HerzultForumBundle:Category:list' with {'id': category.id} %}
        {% render 'HerzultForumBundle:Topic:list' with {'categorySlug': category.slug, 'pagerOptions': {'page': page, 'routeName': 'herzult_forum_category_show', 'routeParams': {'slug': category.slug}}} %}
    </div>
    <div class="side categories">
        <h2>{{'category.title' | transchoice(2, {}, 'HerzultForumBundle')}}</h2>
        {% render 'HerzultForumBundle:Category:list' %}
        <h2>{{ 'action.title' | trans({}, 'HerzultForumBundle')}}</h2>
        <p><a href="{{ path('herzult_forum_category_topic_new', {'slug': category.slug} ) }}">{{ 'action.topic.create' | trans({}, 'HerzultForumBundle')}}</a></p>
    </div>
</div>
{% endblock %}
